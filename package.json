{
  "name": "quick-rename-figma-plugin",
  "version": "4.0.0",
  "type": "module",
  "description": "Minimal Figma plugin for quick layer renaming",
  "scripts": {
    "build:ui": "vite build",
    "build:plugin": "esbuild src/plugin/code.ts --bundle --outfile=dist/code.js --target=es2020",
    "build": "npm run build:ui && npm run build:plugin",
    "dev": "concurrently \"npm run build:ui -- --watch\" \"npm run build:plugin -- --watch\"",
    "watch": "npm run dev"
  },
  "dependencies": {
    "@phosphor-icons/react": "^2.1.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.82.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "esbuild": "^0.20.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.1.0",
    "vite-plugin-singlefile": "^2.0.1"
  }
}
